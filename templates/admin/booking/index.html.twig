{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des réservations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Montant</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('m/d/Y H:i') }}</td>
                    <td>
                        <img src="{{ booking.booker.picture }}" alt="Avatar de {{ booking.booker.fullName }}" class="avatar avatar-micro mr-2">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>
                        <p>{{ booking.ad.title }}</p>
                    </td>
                    <td>
                        {{ booking.amount }} &euro;
                    </td>
                    <td>
                        <a href="{{ path('admin_booking_edit',{'id': booking.id}) }}" class="btn btn-info mb-1">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{ path('admin_booking_delete',{'id': booking.id}) }}" class="btn btn-danger mb-1">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
