{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <h1 class="mb-4">Connectez-vous</h1>
            <div class="p-3 shadow clearfix">

                {% if hasError %}
                    <div class="alert alert-danger">
                        Une erreur est survenue. Le mail ou le mot de passe est invalide
                    </div>
                {% endif %}
                
                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail..." value="{{ username }}" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ..." required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary float-right">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
